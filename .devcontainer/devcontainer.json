// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
	"name": "Pytorch (GPU)",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--gpus",
		"all",
		"--ipc=host",
		"--ulimit",
		"memlock=-1",
		"--ulimit",
		"stack=67108864",
		"--shm-size",
		"1g",
		"-m",
		"60g", // limit RAM for container to 60Gb
		"-v",
		"${localWorkspaceFolder}/.devcontainer/huggingface:/root/.cache/huggingface"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter"
			]
		}
	},
	"remoteUser": "root"
}